<h1>Search Results</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <%= form_tag(search_results_path, :method => "get", id: "search-form") do %>
        <%= text_field_tag :search, params[:search], placeholder: "Search Categories and Books..." %>
        <%= submit_tag "Search" %>
      <% end %>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.description %></td>
        <td><%= Category.find(book.category_id).name %></td>
        <td><%= link_to 'Book page', book %></td>
      </tr>
    <% end %>
    <% @categories.each do |category| %>
    <tr>
        <td><%= category.name %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

